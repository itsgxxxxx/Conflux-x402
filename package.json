{
  "name": "conflux-x402-toolkit",
  "private": true,
  "version": "0.1.0",
  "description": "Conflux eSpace x402 payment developer toolkit with pluggable compliance gate",
  "scripts": {
    "build": "pnpm -r build",
    "dev:facilitator": "pnpm --filter @conflux-x402/facilitator dev",
    "dev:sandbox": "pnpm --filter @conflux-x402/sandbox dev",
    "dev:server": "pnpm --filter @conflux-x402/sandbox dev",
    "dev:moviememo": "pnpm --filter @conflux-x402/moviememo dev",
    "dev:attestor": "pnpm --filter @conflux-x402/attestor dev",
    "register:chart-agent": "pnpm --filter @conflux-x402/sandbox register:chart-agent",
    "start:client": "pnpm --filter @conflux-x402/client start",
    "start:client:manual": "pnpm --filter @conflux-x402/client start:manual",
    "start:buyer-agent": "pnpm --filter @conflux-x402/buyer-agent start",
    "start:mcp": "pnpm --filter @conflux-x402/mcp-server start",
    "lint": "pnpm -r lint",
    "test": "pnpm -r test",
    "test:contracts": "pnpm --filter @conflux-x402/contracts test"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
