# ===== Facilitator =====
FACILITATOR_PRIVATE_KEY=0x...        # Facilitator wallet private key (needs CFX for gas)
FACILITATOR_PORT=4022
RPC_URL=https://evm.confluxrpc.com
NETWORK=eip155:1030

# ===== Settlement =====
VERIFY_ONLY_MODE=true                # true = verify only; false = execute on-chain settlement

# ===== Safety Controls =====
ALLOWED_PAYER_ADDRESSES=0x...,0x...  # Optional allowlist (empty = allow all)
MAX_PER_TRANSACTION=1.0              # Per-transaction limit (USD)
MAX_DAILY_TOTAL=10.0                 # Daily total limit (USD)
CIRCUIT_BREAKER_THRESHOLD=10         # Open breaker after N failures
GAS_BUFFER_PERCENT=50                # Gas estimate buffer %

# ===== Sandbox Server =====
SERVER_PORT=4021
FACILITATOR_URL=http://localhost:4022
EVM_ADDRESS=0x...                    # Recipient address for x402 payments
PAYMENT_ENABLED=true
CHAIN_ID=1030

# ===== Server Auth Gate =====
AUTH_MODE=none                       # none | domain_gate
IDENTITY_REGISTRY_ADDRESS=0x...      # Required when AUTH_MODE=domain_gate

# ===== Service-to-Service Auth =====
FACILITATOR_API_KEY=                 # Optional shared key between sandbox and facilitator

# ===== Server Refund =====
REFUND_DEFAULT=off                   # off | on
SERVER_PRIVATE_KEY=0x...             # Required when REFUND_DEFAULT=on

# ===== Client =====
CLIENT_PRIVATE_KEY=0x...             # Payer wallet private key
SERVER_URL=http://localhost:4021
AUTH_ENABLED=false                   # true when AUTH_MODE=domain_gate

# ===== Identity Gating Contracts =====
ZK_VERIFIER_ADDRESS=0x...
AGENT_REGISTRY_ADDRESS=0x...

# ===== Attestor Service =====
ATTESTOR_PRIVATE_KEY=0x...
ATTESTOR_URL=http://localhost:3003
PORT=3003
DEFAULT_EXPIRY_SECONDS=2592000
MOCK_MODE=false

# ===== MovieMemo =====
TMDB_API_KEY=...

# ===== MCP Server =====
X402_PRIVATE_KEY=0x...
X402_RPC_URL=https://evm.confluxrpc.com
X402_MAX_PAYMENT_PER_CALL=0.10
X402_MAX_DAILY_SPEND=5.0

# ===== Buyer Agent (Discovery Demo) =====
BUYER_PRIVATE_KEY=0x...
CHART_AGENT_ENDPOINT=http://localhost:4021
MOVIEMEMO_AGENT_ENDPOINT=https://your-moviememo-domain.example

# ===== Registry CLI (Generic Agent Registration) =====
AGENT_ENDPOINT=https://your-agent-domain.example
AGENT_CAPABILITIES=moviememo,movie-info,career-trends,soundtrack
AGENT_PRICE=0.001
AGENT_ASSET=0x...
